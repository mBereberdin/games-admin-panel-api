{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/logs.txt",
          "rollOnFileSizeLimit": true,
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "ConnectionStrings": {
    "AdminDbContext": "Host=localhost;Port=5433;Database=AdminPanel;Username=admin;Password=123"
  },
  "JwtSettings": {
    "Issuer": "GamesAdminPanel",
    "Audience": "Clients",
    "ExpiryInMinutes": 5,
    "SecurityKeyWord": "myverystrongandverysecretkeyword"
  },
  "CacheSettings": {
    "RedisUrl": "localhost:6379",
    "RedisPassword": "redisSecretPassword",
    "CacheLifetimeString": "00:01"
  },
  "MinioSettings": {
    "Endpoint": "localhost:9000",
    "AccessKey": "myminioadmin",
    "SecretKey": "secretKey",
    "AvatarsBucketName": "avatars"
  },
  "Urls": "http://localhost:5004/",
  "IsUseSwagger": true
}
